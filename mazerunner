'''
distance = 5
run.showturtle()
run.turtlesize(3)
run.penup()
def forward():
    run.forward(distance)
def down():
    run.back(distance)
def left():
    run.left(90)
    run.forward(distance)
    run.right(90)
def right():
    run.right(90)
    run.forward(distance)
    run.left(90)
    
wn.onkeypress(forward, "Up")
wn.onkeypress(down, "Down")
wn.onkeypress(left, "Left")
wn.onkeypress(right, "Right")
'''

wn.listen()
wn.mainloop()

import turtle as trtl
import random as rand
wall = trtl.Turtle()
run = trtl.Turtle()
wn = trtl.Screen()
# Set up wall drawing
run.hideturtle()
wall.penup()
wall.goto(200,200)
wall.pensize(5)
wall.pencolor("black")
wall.pendown()
wall.right(90)
wall.forward(400)

# Variables
wallnum = 25
pathwidth = 30
n = 0

wall.speed(0)

# Drawing the walls
while (n <= 21):
    wall.right(90)
    wall.forward(400-15*n)
    n = n + 1
wall.hideturtle()

# Set up for first barrier

count = 0
wall.pencolor("brown")
wall.penup()
wall.goto(-20,5)
wall.pendown()
'''
# Barriers function
def barriers():
    global count
    count = 0
    while (count < 6):
        wall.forward(pathwidth)
        wall.left(90)
        wall.penup()
        wall.forward(pathwidth)
        wall.pendown()
        wall.right(90)
        count = count + 1
barriers()

wall.setheading(180)
wall.penup()
wall.goto(-20,5)
wall.pendown()
barriers()

wall.setheading(270)
wall.penup()
wall.goto(-20,-20)
wall.pendown()
barriers()

wall.setheading(0)
wall.penup()
wall.goto(20,5)
wall.pendown()
barriers()

# End making barriers

# Doors
wall.pencolor("white")
wall.penup()
wall.goto(-10,5 + pathwidth)
wall.pendown()
barriers()

wall.penup()
wall.goto(-50,5)
wall.setheading(90)
wall.pendown()
barriers()

wall.penup()
wall.goto(-20,-50)
wall.setheading(180)
wall.pendown()
barriers()

wall.penup()
wall.goto(50,-20)
wall.setheading(270)
wall.pendown()
barriers()
'''
